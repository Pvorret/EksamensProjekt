<Window x:Class="EksamensProjekt.View.ConnectSensorToCitizen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forbind Sensor Til Borger" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Sensor" HorizontalAlignment="Left" Margin="38,21,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="Sensor_Dropdown" HorizontalAlignment="Left" Margin="133,21,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Sensor_Dropdown_SelectionChanged"/>
        <Label Content="Sensor Type" HorizontalAlignment="Left" Margin="38,52,0,0" VerticalAlignment="Top"/>
        <TextBox IsReadOnly="True" Name="SensorType_TextBox" HorizontalAlignment="Left" Height="23" Margin="133,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Sensor Lokation" HorizontalAlignment="Left" Margin="38,83,0,0" VerticalAlignment="Top"/>
        <TextBox Name="SensorLocation_TextBox" HorizontalAlignment="Left" Height="23" Margin="133,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Borger" HorizontalAlignment="Left" Margin="38,114,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="Citizen_DropDown" HorizontalAlignment="Left" Margin="133,118,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Citizen_DropDown_SelectionChanged"/>
        <Label Content="CPRNR" HorizontalAlignment="Left" Margin="38,145,0,0" VerticalAlignment="Top"/>
        <TextBox Name="CPRNR_TextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="133,148,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="Connect_Button" Content="Forbind" HorizontalAlignment="Left" Margin="38,181,0,0" VerticalAlignment="Top" Width="75" Click="Connect_Button_Click"/>
        <Button Name="Return_Button" Content="Tilbage" HorizontalAlignment="Left" Margin="178,181,0,0" VerticalAlignment="Top" Width="75" Click="Return_Button_Click"/>
    </Grid>
</Window>
